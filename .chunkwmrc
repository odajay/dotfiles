#!/bin/bash

chunkc core::log_file stdout
chunkc core::log_level warn


chunkc core::plugin_dir /usr/local/opt/chunkwm/share/chunkwm/plugins
chunkc core::hotload 1
chunkc core::unload tiling.so
chunkc core::unload ffm.so
chunkc core::unload border.so


chunkc set global_desktop_mode           bsp

chunkc set global_desktop_offset_top     25
chunkc set global_desktop_offset_bottom  20
chunkc set global_desktop_offset_left    20
chunkc set global_desktop_offset_right   20
chunkc set global_desktop_offset_gap     20

chunkc set desktop_padding_step_size     10.0
chunkc set desktop_gap_step_size         10.0

chunkc set bsp_spawn_left                1
chunkc set bsp_optimal_ratio             1.618
chunkc set bsp_split_mode                optimal
chunkc set bsp_split_ratio               0.5

chunkc set monitor_focus_cycle           1
chunkc set window_focus_cycle            monitor

chunkc set mouse_follows_focus           intrinsic
chunkc set window_float_next             0
chunkc set window_float_center           1
chunkc set window_region_locked          1

chunkc set mouse_modifier               \"cmd ctrl\"
chunkc set mouse_move_window             \"cmd ctrl 1\"
chunkc set mouse_resize_window           \"cmd ctrl 2\"
chunkc set mouse_motion_interval 35

chunkc set preselect_border_color        0xfff0f0f0 #0xffd75f5f
chunkc set preselect_border_width        5
chunkc set preselect_border_radius       0


chunkc set window_float_topmost          0
chunkc set window_fade_inactive          1
chunkc set window_fade_alpha             0.95
chunkc set window_fade_duration          0.25
chunkc set window_use_cgs_move           1

#
# Wallpaper
#

# chunkc set wallpaper                     ~/Pictures/Themes/Wallpapers/Desktop/foggy_hills.jpg
# chunkc set wallpaper_mode                fill
# chunkc set wallpaper_blur                5.0


chunkc set focused_border_color          0xaaffffff
chunkc set focused_border_width          2
chunkc set focused_border_radius         0
chunkc set focused_border_outline        0
chunkc set focused_border_skip_floating  0
chunkc set focused_border_skip_monocle   0


chunkc set ffm_bypass_modifier           \"cmd shift\"
chunkc set ffm_standby_on_float          1
chunkc set ffm_disable_autoraise         0


chunkc core::load border.so
chunkc core::load tiling.so
chunkc core::load ffm.so


chunkc tiling::rule --owner mpv --state float &
chunkc tiling::rule --owner LINE --state float &
chunkc tiling::rule --owner Finder --name Copy --state float &
chunkc tiling::rule --owner \"App Store\" --state float &
chunkc tiling::rule --owner \"World of Warcraft\" --state float &
chunkc tiling::rule --owner Qbserve --state float &
chunkc tiling::rule --owner BetterTouchTool --state float &
chunkc tiling::rule --owner licecap --state float &
chunkc tiling::rule --owner iTunes --state float &
chunkc tiling::rule --owner GoToMeeting --state float &
chunkc tiling::rule --owner Anki --state float &
chunkc tiling::rule --owner \"iA Writer\" --state float &
chunkc tiling::rule --owner \"Tweetbot\" --state float &
chunkc tiling::rule --owner \"Fantastical\" --name \"Fantastical 2\" --state float &
chunkc tiling::rule --owner Notes --state float &
chunkc tiling::rule --owner Steam --desktop 5 --follow-desktop &
chunkc tiling::rule --owner Reaper --except "^$" --desktop 5 --follow-desktop --state tile &
chunkc tiling::rule --owner \"Calculator\" --state float &
chunkc tiling::rule --owner \"Dictionary\" --state float &
chunkc tiling::rule --owner \"mpv\" --state float &
chunkc tiling::rule --owner \"IINA\" --state float &
chunkc tiling::rule --owner \"The Unarchiver\" --state float &
chunkc tiling::rule --owner \"VirtualBox\" --name \"Oracle VM VirtualBox Manager\" --state float &
chunkc tiling::rule --owner Emacs --except "^$" --state tile &

chunkwm --load-sa